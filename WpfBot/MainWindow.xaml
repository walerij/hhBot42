                <BlurEffect Radius="2"/>
            </TextBox.Effect>
        </TextBox>
        <ListBox x:Name="ResListBox" HorizontalAlignment="Left" Height="136" Margin="33,92,0,0" VerticalAlignment="Top" Width="521" Grid.IsSharedSizeScope="True">
            <ListBox.Effect>
                <DropShadowEffect BlurRadius="10"/>
            </ListBox.Effect>
            <Button/>
            <ListBoxItem/>
        </ListBox>
        <Button Content="Test" HorizontalAlignment="Left" Margin="55,298,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1"/>

    </Grid>
</Window>
