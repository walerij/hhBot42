                </TransformGroup>
            </DataGrid.RenderTransform>
            <TabItem/>
            <TabItem/>
        </DataGrid>
        <Button Content="Запуск" HorizontalAlignment="Left" Height="32" Margin="69,26,0,0" VerticalAlignment="Top" Width="180" Grid.RowSpan="6" Click="Button_Click">
            <Button.Effect>
                <DropShadowEffect ShadowDepth="9"/>
            </Button.Effect>
        </Button>
        <TextBox x:Name="ResBox" HorizontalAlignment="Left" Height="49" Margin="333,26,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="201" FontSize="22" Text="11" ScrollViewer.CanContentScroll="True" Grid.IsSharedSizeScope="True" FontFamily="Segoe UI Symbol">
