        xmlns:local="clr-namespace:WpfBot"
        mc:Ignorable="d"
        Title="HHBot" Height="387.984" Width="595.543">
    <Grid>
        <DataGrid HorizontalAlignment="Left" Height="93" Margin="304,249,0,0" VerticalAlignment="Top" Width="260" RenderTransformOrigin="0.5,0.5">
            <DataGrid.Columns>
                <DataGridTextColumn/>
            </DataGrid.Columns>
            <DataGrid.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="-2.326"/>
                    <RotateTransform/>
